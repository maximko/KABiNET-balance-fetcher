<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#06B01A" />
            <stroke
                android:width="1px"
                android:color="#39E24D" />
            <padding
                android:left="50dp"
                android:top="10dp"
                android:right="50dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#39E24D"
                android:endColor="#00C618"
                android:angle="270" />
            <stroke
                android:width="1px"
                android:color="#cccccc" />

        </shape>
    </item>
</selector>